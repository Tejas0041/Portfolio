<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="lg:ml-64 p-4 sm:p-6 lg:p-8 pt-16 lg:pt-8">
  <h1 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8">Education</h1>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
    <!-- Add Form -->
    <div class="bg-dark-200 p-4 sm:p-6 rounded-xl h-fit">
      <h2 class="text-xl font-semibold mb-4">Add Education</h2>
      <form action="/admin/education" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm text-gray-400 mb-2">Degree/Course</label>
          <input type="text" name="title" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none"
            placeholder="B.Tech in Computer Science">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Institution</label>
          <input type="text" name="institution" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none"
            placeholder="IIEST Shibpur">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Location</label>
          <input type="text" name="location"
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none"
            placeholder="West Bengal, India">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Period</label>
          <input type="text" name="period" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none"
            placeholder="2021 - 2025">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Description</label>
          <textarea name="description" rows="3"
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none"
            placeholder="CGPA, achievements, etc."></textarea>
        </div>
        <div class="flex items-center gap-2">
          <input type="checkbox" name="current" id="current" class="rounded">
          <label for="current" class="text-sm text-gray-400">Currently Studying</label>
        </div>
        <button type="submit" class="w-full py-3 bg-gradient-to-r from-primary to-secondary rounded-lg font-semibold">
          Add Education
        </button>
      </form>
    </div>
    
    <!-- Education List -->
    <div class="lg:col-span-2 space-y-4">
      <% if (!profile.education || profile.education.length === 0) { %>
        <div class="bg-dark-200 p-8 rounded-xl text-center text-gray-400">
          No education added yet
        </div>
      <% } %>
      <% (profile.education || []).forEach((edu, index) => { %>
        <div class="bg-dark-200 p-6 rounded-xl">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <h3 class="font-semibold text-lg"><%= edu.title %></h3>
                <% if (edu.current) { %>
                  <span class="px-2 py-1 text-xs rounded bg-green-500/20 text-green-400">Current</span>
                <% } %>
              </div>
              <p class="text-secondary"><%= edu.institution %></p>
              <p class="text-gray-500 text-sm"><%= edu.location %> • <%= edu.period %></p>
              <% if (edu.description) { %>
                <p class="text-gray-400 mt-2 text-sm"><%= edu.description %></p>
              <% } %>
            </div>
            <div class="flex gap-2">
              <button onclick="editEducation(<%= index %>)" class="text-secondary hover:text-secondary/80">✏️</button>
              <button type="button" onclick="confirmDelete('/admin/education/<%= index %>/delete', 'education')" class="text-red-400 hover:text-red-300">✕</button>
            </div>
          </div>
          <div id="edit-edu-<%= index %>" class="hidden mt-4 pt-4 border-t border-gray-700">
            <form action="/admin/education/<%= index %>/update" method="POST" class="space-y-3">
              <input type="text" name="title" value="<%= edu.title %>" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
              <input type="text" name="institution" value="<%= edu.institution %>" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
              <input type="text" name="location" value="<%= edu.location %>" class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
              <input type="text" name="period" value="<%= edu.period %>" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
              <textarea name="description" rows="2" class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm"><%= edu.description || '' %></textarea>
              <div class="flex items-center gap-2">
                <input type="checkbox" name="current" <%= edu.current ? 'checked' : '' %>>
                <label class="text-sm">Currently Studying</label>
              </div>
              <div class="flex gap-2">
                <button type="submit" class="px-4 py-2 bg-secondary rounded-lg text-sm">Save</button>
                <button type="button" onclick="document.getElementById('edit-edu-<%= index %>').classList.add('hidden')" class="px-4 py-2 bg-gray-700 rounded-lg text-sm">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      <% }) %>
      <script>
        function editEducation(index) {
          document.getElementById('edit-edu-' + index).classList.toggle('hidden');
        }

        function confirmDelete(url, type) {
          showConfirmModal(
            'Confirm Deletion',
            `Are you sure you want to delete this ${type}? This action cannot be undone.`,
            () => {
              const form = document.createElement('form');
              form.method = 'POST';
              form.action = url;
              document.body.appendChild(form);
              form.submit();
            },
            'Delete',
            'bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700'
          );
        }
      </script>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
