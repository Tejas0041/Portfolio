<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="lg:ml-64 p-4 sm:p-6 lg:p-8 pt-16 lg:pt-8">
  <h1 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8">Coding Profiles</h1>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
    <!-- Add Form -->
    <div class="bg-dark-200 p-4 sm:p-6 rounded-xl h-fit">
      <h2 class="text-xl font-semibold mb-4">Add Coding Profile</h2>
      <form action="/admin/coding-profiles" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm text-gray-400 mb-2">Platform</label>
          <select name="platform" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none">
            <option value="LeetCode">LeetCode</option>
            <option value="GeeksforGeeks">GeeksforGeeks</option>
            <option value="Codeforces">Codeforces</option>
            <option value="CodeChef">CodeChef</option>
            <option value="Coding Ninjas">Coding Ninjas</option>
            <option value="HackerRank">HackerRank</option>
            <option value="HackerEarth">HackerEarth</option>
          </select>
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Username</label>
          <input type="text" name="username" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-2">Profile Link</label>
          <input type="url" name="link" required
            class="w-full px-4 py-3 rounded-lg bg-dark-300 border border-gray-700 text-white focus:border-primary focus:outline-none">
        </div>
        
        <h3 class="text-lg font-semibold pt-4 border-t border-gray-700">Stats (3 stats)</h3>
        
        <div class="grid grid-cols-2 gap-2">
          <input type="text" name="stat1Label" placeholder="Label (e.g., Problems)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
          <input type="text" name="stat1Value" placeholder="Value (e.g., 500+)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
        </div>
        <div class="grid grid-cols-2 gap-2">
          <input type="text" name="stat2Label" placeholder="Label (e.g., Rating)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
          <input type="text" name="stat2Value" placeholder="Value (e.g., 1800+)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
        </div>
        <div class="grid grid-cols-2 gap-2">
          <input type="text" name="stat3Label" placeholder="Label (e.g., Contests)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
          <input type="text" name="stat3Value" placeholder="Value (e.g., 50+)"
            class="px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm focus:border-primary focus:outline-none">
        </div>
        
        <button type="submit" class="w-full py-3 bg-gradient-to-r from-primary to-secondary rounded-lg font-semibold">
          Add Profile
        </button>
      </form>
    </div>
    
    <!-- Profiles List -->
    <div class="lg:col-span-2">
      <div class="grid md:grid-cols-2 gap-4">
        <% if (!profile.codingProfiles || profile.codingProfiles.length === 0) { %>
          <div class="md:col-span-2 bg-dark-200 p-8 rounded-xl text-center text-gray-400">
            No coding profiles added yet
          </div>
        <% } %>
        <% (profile.codingProfiles || []).forEach((cp, index) => { %>
          <div class="bg-dark-200 p-6 rounded-xl">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h3 class="font-semibold text-lg"><%= cp.platform %></h3>
                <p class="text-gray-400 text-sm">@<%= cp.username %></p>
              </div>
              <div class="flex gap-2">
                <button onclick="editProfile(<%= index %>)" class="text-primary hover:text-primary/80">✏️</button>
                <button type="button" onclick="confirmDelete('/admin/coding-profiles/<%= index %>/delete', 'coding profile')" class="text-red-400 hover:text-red-300">✕</button>
              </div>
            </div>
            <div class="grid grid-cols-3 gap-2 text-center mb-4">
              <% if (cp.stats?.stat1Label) { %>
                <div>
                  <p class="font-bold text-primary"><%= cp.stats.stat1Value %></p>
                  <p class="text-xs text-gray-500"><%= cp.stats.stat1Label %></p>
                </div>
              <% } %>
              <% if (cp.stats?.stat2Label) { %>
                <div>
                  <p class="font-bold text-primary"><%= cp.stats.stat2Value %></p>
                  <p class="text-xs text-gray-500"><%= cp.stats.stat2Label %></p>
                </div>
              <% } %>
              <% if (cp.stats?.stat3Label) { %>
                <div>
                  <p class="font-bold text-primary"><%= cp.stats.stat3Value %></p>
                  <p class="text-xs text-gray-500"><%= cp.stats.stat3Label %></p>
                </div>
              <% } %>
            </div>
            <a href="<%= cp.link %>" target="_blank" class="block text-center text-primary text-sm hover:underline">
              View Profile →
            </a>
            
            <div id="edit-profile-<%= index %>" class="hidden mt-4 pt-4 border-t border-gray-700">
              <form action="/admin/coding-profiles/<%= index %>/update" method="POST" class="space-y-3">
                <select name="platform" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
                  <option value="LeetCode" <%= cp.platform === 'LeetCode' ? 'selected' : '' %>>LeetCode</option>
                  <option value="GeeksforGeeks" <%= cp.platform === 'GeeksforGeeks' ? 'selected' : '' %>>GeeksforGeeks</option>
                  <option value="Codeforces" <%= cp.platform === 'Codeforces' ? 'selected' : '' %>>Codeforces</option>
                  <option value="CodeChef" <%= cp.platform === 'CodeChef' ? 'selected' : '' %>>CodeChef</option>
                  <option value="Coding Ninjas" <%= cp.platform === 'Coding Ninjas' ? 'selected' : '' %>>Coding Ninjas</option>
                  <option value="HackerRank" <%= cp.platform === 'HackerRank' ? 'selected' : '' %>>HackerRank</option>
                </select>
                <input type="text" name="username" value="<%= cp.username %>" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
                <input type="url" name="link" value="<%= cp.link %>" required class="w-full px-3 py-2 rounded-lg bg-dark-300 border border-gray-700 text-white text-sm">
                <div class="grid grid-cols-2 gap-2">
                  <input type="text" name="stat1Label" value="<%= cp.stats?.stat1Label || '' %>" placeholder="Label" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                  <input type="text" name="stat1Value" value="<%= cp.stats?.stat1Value || '' %>" placeholder="Value" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                  <input type="text" name="stat2Label" value="<%= cp.stats?.stat2Label || '' %>" placeholder="Label" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                  <input type="text" name="stat2Value" value="<%= cp.stats?.stat2Value || '' %>" placeholder="Value" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                  <input type="text" name="stat3Label" value="<%= cp.stats?.stat3Label || '' %>" placeholder="Label" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                  <input type="text" name="stat3Value" value="<%= cp.stats?.stat3Value || '' %>" placeholder="Value" class="px-2 py-1 rounded bg-dark-300 border border-gray-700 text-white text-xs">
                </div>
                <div class="flex gap-2">
                  <button type="submit" class="px-4 py-2 bg-primary rounded-lg text-sm">Save</button>
                  <button type="button" onclick="document.getElementById('edit-profile-<%= index %>').classList.add('hidden')" class="px-4 py-2 bg-gray-700 rounded-lg text-sm">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      <script>
        function editProfile(index) {
          document.getElementById('edit-profile-' + index).classList.toggle('hidden');
        }

        function confirmDelete(url, type) {
          showConfirmModal(
            'Confirm Deletion',
            `Are you sure you want to delete this ${type}? This action cannot be undone.`,
            () => {
              const form = document.createElement('form');
              form.method = 'POST';
              form.action = url;
              document.body.appendChild(form);
              form.submit();
            },
            'Delete',
            'bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700'
          );
        }
      </script>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
